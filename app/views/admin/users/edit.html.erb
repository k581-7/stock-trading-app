<div class="container-xl pt-4 pb-5 px-3 px-md-4 px-lg-5">
  <div class="d-flex align-items-center gap-2 mb-3">
    <%= link_to admin_user_path(@user), class: "text-decoration-none d-flex align-items-center gap-2" do %>
      <i class="bi bi-arrow-left"></i><span>Back to User</span>
    <% end %>
  </div>

  <div class="d-flex align-items-center gap-3 mb-3">
    <div class="rounded-circle bg-primary-subtle text-primary d-flex align-items-center justify-content-center" style="width:40px;height:40px;">
      <i class="bi bi-person fs-5"></i>
    </div>
    <div>
      <h4 class="mb-0 fw-semibold">Edit User</h4>
      <small class="text-secondary">
        <%= ([@user.first_name, @user.last_name].map(&:presence).compact.join(" ").presence ||
             @user.username.presence ||
             @user.email.split("@").first) %>
      </small>
    </div>
  </div>

  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <div class="fw-semibold mb-1"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</div>
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card border-0 shadow-sm">
    <div class="card-body">
      <%= form_with model: [:admin, @user], url: admin_user_path(@user), method: :patch, local: true do |f| %>
        <div class="row">
          <div class="col-12 col-md-6 mb-3">
            <%= f.label :first_name, class: "form-label" %>
            <%= f.text_field :first_name, class: "form-control", placeholder: "First name" %>
          </div>
          <div class="col-12 col-md-6 mb-3">
            <%= f.label :last_name, class: "form-label" %>
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
          </div>

          <div class="col-12 col-md-6 mb-3">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
          </div>

          <div class="col-12 col-md-6 mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "name@example.com" %>
          </div>
        </div>

        <div class="d-flex gap-2">
          <%= f.submit "Save Changes", class: "btn btn-primary" %>
          <%= link_to "Cancel", admin_user_path(@user), class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .bg-primary-subtle{ background:#e7f1ff!important; color:#0d6efd!important; }
</style>
