<div class="container mt-4">
<!-- ðŸ“ˆðŸ“‰ Gainers & Losers Section -->
<div class="card mb-4 shadow-sm">
  <div class="card-body">
    <div class="row g-4">
      <!-- Top Gainers -->
      <div class="col-md-6">
        <div class="card border-success h-100">
          <div class="card-header bg-success text-white">
            <h6 class="mb-0">Top Gainers Today</h6>
          </div>
          <div class="card-body">
            <% @top_gainers.each do |stock| %>
              <div class="d-flex justify-content-between mb-2">
                <strong><%= stock.symbol %></strong>
                <span><%= number_to_currency(stock.current_price) %></span>
                <span class="text-success">+<%= stock.percent_change %>%</span>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Top Losers -->
      <div class="col-md-6">
        <div class="card border-danger h-100">
          <div class="card-header bg-danger text-white">
            <h6 class="mb-0">Top Losers Today</h6>
          </div>
          <div class="card-body">
            <% @top_losers.each do |stock| %>
              <div class="d-flex justify-content-between mb-2">
                <strong><%= stock.symbol %></strong>
                <span><%= number_to_currency(stock.current_price) %></span>
                <span class="text-danger"><%= stock.percent_change %>%</span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- ðŸ“Š Available Stocks Section -->
<div class="card mb-4 shadow-sm">
  <div class="card-header bg-dark text-white">
    <h6 class="mb-0">Available Stocks</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-dark table-hover align-middle">
        <thead>
          <tr>
            <th>Symbol</th>
            <th>Company</th>
            <th>Price</th>
            <th>Current Price</th>
            <th>Price Change</th>
            <th>% Change</th>
            <th>Last Updated</th>
            <th>Status</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @stocks.each do |stock| %>
            <% live_price = stock.current_price.to_f %>
            <tr>
              <td><strong><%= stock.symbol %></strong></td>
              <td><%= stock.name %></td>
              <td><%= number_to_currency(stock.current_price) %></td>
              <td class="text-info"><%= number_to_currency(live_price) %></td>
              <td style="color: <%= stock.price_change.to_f >= 0 ? 'lime' : 'red' %>;">
                <%= stock.price_change.to_f >= 0 ? 'â–² +' : 'â–¼ ' %>
                <%= number_with_precision(stock.price_change, precision: 2) %>
              </td>
              <td style="color: <%= stock.percent_change.to_f >= 0 ? 'lime' : 'red' %>;">
                <%= stock.percent_change.to_f >= 0 ? 'â–² +' : 'â–¼ ' %>
                <%= number_with_precision(stock.percent_change, precision: 2) %>%>
              </td>
              <td><%= stock.last_updated_at.in_time_zone('Asia/Manila').strftime('%H:%M:%S') %></td>
              <td style="color: <%= stock.market_open ? 'lime' : 'gray' %>;">
                <%= stock.market_open ? 'Open' : 'Closed' %>
              </td>
              <td class="text-center">
                <%= form_with url: buy_trade_path, method: :post, class: "d-inline", local: true do %>
                  <%= hidden_field_tag :stock_id, stock.id %>
                  <%= hidden_field_tag :shares, 1 %>
                  <%= submit_tag "Buy", class: "btn btn-sm btn-success me-1" %>
                <% end %>
                <%= form_with url: sell_trade_path, method: :post, class: "d-inline", local: true do %>
                  <%= hidden_field_tag :stock_id, stock.id %>
                  <%= hidden_field_tag :shares, 1 %>
                  <%= submit_tag "Sell", class: "btn btn-sm btn-danger" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>