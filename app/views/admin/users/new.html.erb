<div class="container-xl pt-4 pb-5 px-3 px-md-4 px-lg-5">
  <div class="d-flex align-items-center gap-2 mb-3">
    <%= link_to admin_users_path, class: "text-decoration-none d-flex align-items-center gap-2" do %>
      <i class="bi bi-arrow-left"></i>
      <span>Back to Users</span>
    <% end %>
  </div>

  <div class="d-flex align-items-center gap-3 mb-3">
    <div class="rounded-circle bg-primary-subtle text-primary d-flex align-items-center justify-content-center" style="width:40px;height:40px;">
      <i class="bi bi-person-plus fs-5"></i>
    </div>
    <div>
      <h4 class="mb-0 fw-semibold">Create New User</h4>
      <small class="text-secondary">Set the userâ€™s basic information</small>
    </div>
  </div>

  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <div class="fw-semibold mb-1"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</div>
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card border-0 shadow-sm">
    <div class="card-body">
      <div class="d-flex align-items-center mb-3">
        <div class="rounded-circle bg-primary-subtle text-primary d-flex align-items-center justify-content-center me-3" style="width:56px;height:56px;">
          <i class="bi bi-person fs-3"></i>
        </div>
        <div>
          <div class="fw-semibold">New User</div>
          <small class="text-secondary d-block">Default role: Trader</small>
        </div>
      </div>

      <%= form_with model: [:admin, @user], url: admin_users_path, method: :post, local: true do |f| %>
        <div class="row">
          <div class="col-12 col-md-6 mb-3">
            <%= f.label :first_name, class: "form-label" %>
            <%= f.text_field :first_name, class: "form-control", placeholder: "First name", required: true, autocomplete: "given-name" %>
          </div>

          <div class="col-12 col-md-6 mb-3">
            <%= f.label :last_name, class: "form-label" %>
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last name", required: true, autocomplete: "family-name" %>
          </div>

          <div class="col-12 col-md-6 mb-3">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-control", placeholder: "Username", required: true, autocomplete: "username" %>
          </div>

          <div class="col-12 col-md-6 mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "name@example.com", required: true, autocomplete: "email" %>
          </div>

          <div class="col-12 col-md-6 mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control", placeholder: "Set a password", required: true, autocomplete: "new-password" %>
          </div>

          <div class="col-12 col-md-6 mb-3">
            <div class="form-check form-switch mt-4">
              <%= f.check_box :approved, class: "form-check-input", id: "approvedSwitch" %>
              <%= f.label :approved, "Mark as approved", class: "form-check-label", for: "approvedSwitch" %>
            </div>
            <small class="text-secondary d-block mt-1">
              Approval date will be set automatically when approved.
            </small>
          </div>
        </div>

        <div class="d-flex gap-2">
          <%= f.submit "Create User", class: "btn btn-primary d-inline-flex align-items-center gap-2" %>
          <%= link_to "Cancel", admin_users_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .bg-primary-subtle { background:#e7f1ff!important; color:#0d6efd!important; }
</style>
