<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card -->
      <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
          <h3 class="mb-0">➕ Add to Portfolio</h3>
        </div>
        <div class="card-body">
          <%= form_with model: @portfolio, local: true do |f| %>
            
            <!-- Stock select -->
            <div class="mb-3">
              <%= f.label :stock_id, "Select Stock", class: "form-label fw-bold" %>
              <%= f.collection_select :stock_id, @stocks, :id, :symbol, {}, class: "form-select" %>
            </div>

            <!-- Quantity -->
            <div class="mb-3">
              <%= f.label :quantity, class: "form-label fw-bold" %>
              <%= f.number_field :quantity, step: 1, min: 1, class: "form-control", placeholder: "Enter number of shares" %>
            </div>

            <!-- Submit -->
            <div class="d-flex justify-content-between">
              <%= link_to "← Back to Portfolio", portfolios_path, class: "btn btn-outline-secondary" %>
              <%= f.submit "Add Stock", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
