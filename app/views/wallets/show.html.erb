<div class="container-fluid trader-dashboard-bg" style="background:#0b1220; min-height:100vh;">
  <div class="container py-4" style="max-width: 1300px;">

    <!-- ðŸ§¾ Wallet Header -->
    <div class="mb-4">
      <h2 class="fw-bold text-light"><i class="bi bi-wallet2 me-2"></i> Wallet</h2>
    </div>

    <!-- ðŸ’³ Summary Metrics -->
    <div class="row g-4 mb-4">
      <div class="col-md-4">
        <div class="card text-center shadow-sm" style="background-color: #1F2937; border-radius: 0.75rem;">
          <div class="card-body">
            <h6 class="text-secondary">Available Balance</h6>
            <h4 class="text-success fw-bold"><%= number_to_currency(@wallet.balance) %></h4>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center shadow-sm" style="background-color: #1F2937; border-radius: 0.75rem;">
          <div class="card-body">
            <h6 class="text-secondary">Total Deposits</h6>
            <h4 class="text-info fw-bold"><%= number_to_currency(@wallet.total_deposits) %></h4>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center shadow-sm" style="background-color: #1F2937; border-radius: 0.75rem;">
          <div class="card-body">
            <h6 class="text-secondary">Trading Volume</h6>
            <h4 class="text-primary fw-bold"><%= number_to_currency(@wallet.trading_volume) %></h4>
          </div>
        </div>
      </div>
    </div>

    <!-- âž• Top Up & Withdraw -->
    <div class="row g-4 mb-4">
      <div class="col-md-6">
        <div class="card shadow-sm" style="background-color: #1F2937; border-radius: 0.75rem;">
          <div class="card-header text-white fw-semibold" style="background-color: #1F2937; border-bottom: none;">Top Up</div>
          <div class="card-body">
            <%= form_with url: top_up_wallet_path, method: :post, local: true do |f| %>
              <div class="mb-3">
                <%= label_tag :amount, "Amount", class: "text-light" %>
                <%= number_field_tag :amount, nil, step: "0.01", min: "0.01", class: "form-control bg-dark text-light", required: true %>
              </div>
              <%= submit_tag "+ Top Up", class: "btn btn-success w-100" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card shadow-sm" style="background-color: #1F2937; border-radius: 0.75rem;">
          <div class="card-header text-white fw-semibold" style="background-color: #1F2937; border-bottom: none;">Withdraw</div>
          <div class="card-body">
            <%= form_with url: withdraw_wallet_path, method: :post, local: true do |f| %>
              <div class="mb-3">
                <%= f.label :amount, "Amount", class: "text-light" %>
                <%= f.number_field :amount, step: 0.01, min: "0.01", class: "form-control bg-dark text-light", required: true %>
              </div>
              <%= f.submit "Withdraw", class: "btn btn-danger w-100" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- ðŸ“„ Transaction History -->
    <div class="card shadow-sm" style="background-color: #1F2937; border-radius: 0.75rem;">
      <div class="card-header text-light fw-semibold" style="background-color: #1F2937;">
        Wallet Activity (<%= @wallet_logs.count %>)
      </div>
      <div class="card-body">
        <% @wallet_logs.each do |log| %>
          <% type = log.transaction_type %>
          <% is_deposit  = type == "deposit" %>
          <% is_withdraw = type == "withdraw" %>

          <% icon_class =
              case type
              when "buy"      then "bi bi-arrow-up-circle-fill text-success"
              when "sell"     then "bi bi-arrow-down-circle-fill text-danger"
              when "deposit"  then "bi bi-arrow-up-circle-fill text-info"
              when "withdraw" then "bi bi-arrow-down-circle-fill text-warning"
              else "bi bi-question-circle-fill text-secondary"
          end %>

          <% badge_class =
              case type
              when "deposit" then "bg-info text-white"
              when "withdraw" then "bg-warning text-dark"
              else "bg-secondary text-white"
              end %>

          <% amount_class = log.amount >= 0 ? "text-success" : "text-danger" %>
          <% action_label =
              case type
              when "deposit" then "Deposited"
              when "withdraw" then "Withdrawn"
              else "Processed"
              end %>

          <div class="mb-3 p-3 rounded" style="background-color:#374151;">
            <div class="row align-items-center">
              <!-- Left side -->
              <div class="col-md-8 col-12">
                <div class="d-flex align-items-center gap-2 mb-1">
                  <i class="<%= icon_class %> fs-5"></i>
                  <strong class="text-light text-uppercase"><%= type %></strong>
                  <span class="badge <%= badge_class %> text-uppercase px-2 py-1"><%= type %></span>
                </div>
                <div class="text-secondary">
                  <%= log.created_at.in_time_zone("Asia/Manila").strftime("%b %d, %Y %I:%M %p") %><br>
                  <%= "#{type.capitalize} of #{number_to_currency(log.amount)} via bank transfer" %>
                </div>
              </div>

              <!-- Right side -->
              <div class="col-md-4 col-12 text-md-end mt-3 mt-md-0">
                <div class="<%= amount_class %> fw-semibold">
                  <%= log.amount >= 0 ? '+' : '-' %><%= number_to_currency(log.amount.abs) %>
                </div>
                <small class="text-muted d-block">Action: <%= type %></small>
                <small class="text-secondary d-block">Balance: <%= number_to_currency(log.wallet&.balance || 0) %></small>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>