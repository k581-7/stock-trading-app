<h1>Create New User</h1>

<%= form_with model: [:admin, @user], local: true do |form| %>

  <%# Display validation errors if any %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username, autofocus: true %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :approved %><br>
    <%= form.check_box :approved %>
    <span>(Check to approve immediately)</span>
  </div>

  <div>
    <%= form.submit "Create User" %>
  </div>

<% end %>

<%= link_to "Back to Users", admin_users_path %>
