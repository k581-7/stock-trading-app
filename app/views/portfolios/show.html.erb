<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card -->
      <div class="card shadow-sm">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
          <h3 class="mb-0"><%= @portfolio.stock.symbol %> Portfolio</h3>
          <span class="badge bg-success">
            <%= @portfolio.stock.market_open ? "Market Open" : "Market Closed" %>
          </span>
        </div>

        <div class="card-body">
          <p class="mb-2">
            <strong>Stock:</strong>
            <%= @portfolio.stock.name %> (<%= @portfolio.stock.symbol %>)
          </p>

          <p class="mb-2">
            <strong>Quantity:</strong>
            <%= @portfolio.quantity %> shares
          </p>

          <p class="mb-2">
            <strong>Current Price:</strong>
            <span class="text-success"><%= number_to_currency(@portfolio.stock.current_price.to_f) %></span>
          </p>

          <p class="mb-2">
            <strong>Market Value:</strong>
            <span class="fw-bold"><%= number_to_currency(@portfolio.stock.current_price.to_f * @portfolio.quantity.to_i) %></span>
          </p>
        </div>

        <div class="card-footer d-flex justify-content-between">
          <%= link_to "← Back to Portfolio", portfolios_path, class: "btn btn-outline-secondary" %>
          <%= link_to "✏️ Edit", edit_portfolio_path(@portfolio), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
