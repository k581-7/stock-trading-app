<div class="container-fluid trader-dashboard-bg">
  <div class="container py-4" style="max-width: 1300px;">

    <!-- ðŸ§¾ Wallet Header -->
    <div class="mb-4">
      <h2 class="fw-bold text-light"><i class="bi bi-wallet2 me-2"></i> Wallet</h2>
      <p class="text-secondary">Approved Trader</p>
    </div>

    <!-- ðŸ’³ Summary Metrics -->
    <div class="row g-4 mb-4">
      <div class="col-md-4">
        <div class="card text-center shadow-sm" style="background-color: #1F2937; border-radius: 0.75rem;">
          <div class="card-body">
            <h6 class="text-secondary">Available Balance</h6>
            <h4 class="text-success fw-bold"><%= number_to_currency(@wallet.balance) %></h4>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center shadow-sm" style="background-color: #1F2937; border-radius: 0.75rem;">
          <div class="card-body">
            <h6 class="text-secondary">Total Deposits</h6>
            <h4 class="text-info fw-bold"><%= number_to_currency(@wallet.total_deposits) %></h4>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center shadow-sm" style="background-color: #1F2937; border-radius: 0.75rem;">
          <div class="card-body">
            <h6 class="text-secondary">Trading Volume</h6>
            <h4 class="text-primary fw-bold"><%= number_to_currency(@wallet.trading_volume) %></h4>
          </div>
        </div>
      </div>
    </div>

    <!-- âž• Top Up & Withdraw -->
    <div class="row g-4 mb-4">
      <div class="col-md-6">
        <div class="card shadow-sm" style="background-color: #1F2937; border-radius: 0.75rem;">
          <div class="card-header text-white fw-semibold" style="background-color: #198754;">Top Up</div>
          <div class="card-body">
            <%= form_with url: top_up_wallet_path, method: :post, local: true do |f| %>
              <div class="mb-3">
                <%= label_tag :amount, "Amount", class: "text-light" %>
                <%= number_field_tag :amount, nil, step: "0.01", min: "0.01", class: "form-control bg-dark text-light", required: true %>
              </div>
              <%= submit_tag "+ Top Up", class: "btn btn-success w-100" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card shadow-sm" style="background-color: #1F2937; border-radius: 0.75rem;">
          <div class="card-header text-white fw-semibold" style="background-color: #dc3545;">Withdraw</div>
          <div class="card-body">
            <%= form_with url: withdraw_wallet_path, method: :post, local: true do |f| %>
              <div class="mb-3">
                <%= f.label :amount, "Amount", class: "text-light" %>
                <%= f.number_field :amount, step: 0.01, min: "0.01", class: "form-control bg-dark text-light", required: true %>
              </div>
              <%= f.submit "Withdraw", class: "btn btn-danger w-100" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- ðŸ“„ Transaction History -->
