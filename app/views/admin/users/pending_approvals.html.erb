<!-- TRADER approvals -->
<div class="d-flex align-items-center gap-2 mb-2 mt-1">
  <i class="bi bi-person-badge text-primary"></i>
  <h4 class="fw-semibold mb-0">Trader Approvals (<%= @users.size %>)</h4>
</div>

<% if @users.blank? %>
  <div class="alert alert-light border mb-4">No pending trader applications.</div>
<% else %>
  <div class="row g-4 mb-5">
    <% @users.each do |user| %>
      <div class="col-12 col-md-6">
        <div class="card border-warning rounded-4 shadow-sm h-100">
          <div class="card-body">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-start mb-3">
              <div class="d-flex align-items-center">
                <div class="rounded-circle bg-warning-subtle text-warning d-flex align-items-center justify-content-center me-3" style="width:40px;height:40px;">
                  <i class="bi bi-alarm fs-5"></i>
                </div>
                <div>
                  <div class="fw-semibold"><%= user.username.presence || user.email.split("@").first %></div>
                  <small class="text-secondary">Application ID: <%= user.id %></small>
                </div>
              </div>

              <span class="badge rounded-pill bg-primary-subtle text-primary">
                <i class="bi bi-person-badge me-1"></i> Trader Application
              </span>
            </div>

            <!-- info card -->
            <ul class="list-unstyled mb-3">
              <li class="mb-1">
                <i class="bi bi-envelope me-2 text-secondary"></i>
                <%= user.email %>
              </li>
              <li class="mb-1">
                <i class="bi bi-calendar2 me-2 text-secondary"></i>
                Applied <%= time_ago_in_words(user.created_at) %> ago
              </li>
              <li class="mb-1 d-flex align-items-center">
                <span class="rounded-circle d-inline-block me-2 bg-warning" style="width:8px;height:8px;"></span>
                <span class="text-secondary">Status: Pending Review</span>
              </li>
            </ul>

            <!-- actions -->
            <div class="d-flex flex-wrap gap-2">
              <%= link_to admin_user_path(user), class: "btn btn-light border d-flex align-items-center gap-2" do %>
                <i class="bi bi-eye"></i> View Details
              <% end %>

              <%= button_to approve_admin_user_path(user),
                    method: :patch,
                    class: "btn btn-warning text-dark d-flex align-items-center gap-2",
                    form: { data: { turbo_confirm: "Approve this Trader application?" } } do %>
                <i class="bi bi-check2-circle"></i> Approve as Trader
              <% end %>

              <%= button_to delete_admin_user_path(user),
                    method: :delete,
                    class: "btn btn-danger d-flex align-items-center gap-2",
                    form: { data: { turbo_confirm: "Reject and remove this Trader application?" } } do %>
                <i class="bi bi-x-circle"></i> Reject
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>


